# LLM Provider Configuration
# Options: anthropic, openai, gemini, ollama
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514
# LLM_BASE_URL=  # optional, for custom endpoints

# Embedding Provider Configuration
# Options: openai, gemini, ollama
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_BASE_URL=  # optional, for custom endpoints

# API Keys
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
# GEMINI_API_KEY=

# Vector Store Configuration
# Options: json, pgvector, pinecone
VECTOR_STORE_TYPE=json
# VECTOR_STORE_PATH=.nexu/vectors.json  # for json store

# Database (required for pgvector)
# DATABASE_URL=postgresql://user:password@localhost:5432/nexu

# CORS Configuration
# WEB_URL=http://localhost:5173
