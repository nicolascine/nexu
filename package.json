{
  "name": "nexu",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:api": "pnpm --filter @nexu/api dev",
    "dev:web": "pnpm --filter @nexu/web dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @nexu/api build",
    "build:web": "pnpm --filter @nexu/web build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm --filter @nexu/api typecheck",
    "test": "pnpm --filter @nexu/api test",
    "ingest": "pnpm --filter @nexu/api ingest",
    "query": "pnpm --filter @nexu/api query",
    "chat": "pnpm --filter @nexu/api chat",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
